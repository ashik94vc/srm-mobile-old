<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#282828" android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<ImageView
    android:id="@+id/grumpy"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/grumpy"/>
<ImageView
    android:id="@+id/srm"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_alignParentRight="true"
    android:src="@drawable/unnamed"
    />
 <TextView
     android:id="@+id/srmtext"
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
     android:text="SRM Mobile"
     android:layout_toRightOf="@+id/grumpy"
     android:layout_centerHorizontal="true"
     android:layout_marginLeft="@dimen/activity_horizontal_margin"
     android:textAppearance="?android:attr/textAppearanceLarge"
     android:layout_marginTop="@dimen/activity_vertical_margin"
     android:textColor="@android:color/white"
     android:layout_alignLeft="@+id/srm"
     />
    <TextView
        android:id="@+id/text2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:ems="13"
        android:text="SRM Mobile App(Alpha) Developed by Ashik Vetrivelu and Muthuramakrishnan of GrumpyDroid Inc. Catch us on facebook for more"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@+id/grumpy"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        />
    <ImageView
        android:id="@+id/imagebutton"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/fb"
        android:layout_below="@+id/text2"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>